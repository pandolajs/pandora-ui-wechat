.m-drawer-container {
  background: #fff;
  opacity: 1;
  visibility: visible;
  position: absolute;
  transition: transform 400ms linear;
  min-height: 100rpx;
  z-index: 1;
}
.m-drawer-container.bottom {
  bottom: 0;
  left: 0;
  right: 0;
  transform: translateY(100%);
}
.m-drawer-container.bottom.open {
  transform: translate(0);
}
.m-drawer-container.top {
  top: 0;
  left: 0;
  right: 0;
  transform: translateY(-100%);
}
.m-drawer-container.top.open {
  transform: translateY(0);
}
.m-drawer-container.left {
  left: 0;
  top: 0;
  bottom: 0;
  transform: translateX(-100%);
}
.m-drawer-container.left.open {
  transform: translateX(0);
}
.m-drawer-container.right {
  right: 0;
  top: 0;
  bottom: 0;
  transform: translateX(100%);
}
.m-drawer-container.right.open {
  transform: translateX(0);
}
.m-drawer-container .close-btn {
  position: absolute;
  right: 10rpx;
  width: 100rpx;
  height: 100rpx;
  top: 30rpx;
  border-radius: 50%;
  background: #fff;
  z-index: 1;
}
.m-drawer-container .close-btn::before {
  content: '';
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
}
.m-drawer-container .close-btn::after {
  content: '';
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  background-image: linear-gradient(45deg, transparent 21rpx, #e8e8e8, transparent 24rpx), linear-gradient(-45deg, transparent 21rpx, #e8e8e8, transparent 24rpx);
}
.m-drawer-container .close-btn-new {
  background: none;
  border-radius: 0;
  width: 84rpx;
  height: 84rpx;
  top: 0rpx;
  right: 0rpx;
}
.m-drawer-container .close-btn-new::before {
  display: none;
}
.m-drawer-container .close-btn::after {
  width: 24 rpx;
  height: 24 rpx;
  left: 30rpx;
  top: 30rpx;
  right: 30rpx;
  transform: none;
  background: url(data:image/png;base64,) center;
  background-size: cover;
}
