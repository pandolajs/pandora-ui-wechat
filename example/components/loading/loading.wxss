.loading .jump view,
.loading .scale view,
.loading .fadeIn view {
  display: inline-block;
  width: 6rpx;
  height: 40rpx;
}
.loading .jump view:not(:first-child),
.loading .scale view:not(:first-child),
.loading .fadeIn view:not(:first-child) {
  margin-left: 15rpx;
}
.loading .jump view {
  animation: jump 0.5s linear infinite;
}
.loading .jump .line2 {
  animation-delay: -0.4s;
}
.loading .jump .line3 {
  animation-delay: -0.1s;
}
.loading .scale view {
  animation: scale 0.5s linear infinite;
}
.loading .scale .line2 {
  animation-delay: -0.4s;
}
.loading .scale .line3 {
  animation-delay: -0.3s;
}
.loading .fadeIn view {
  animation: fadeIn 1s linear infinite;
}
.loading .fadeIn .line2 {
  animation-delay: -0.5s;
}
.loading .fadeIn .line3 {
  animation-delay: 0.75s;
}
.loading .circle-wrapper {
  position: relative;
  width: 30rpx;
  height: 30rpx;
}
.loading .circle-wrapper .circle {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  border: 2rpx #c9c9c9 solid;
  border-top: 2rpx #666 solid;
  animation: circle 1s linear infinite;
}
.loading .circle-wrapper .wrapper {
  position: absolute;
  width: calc(90% - 2rpx);
  height: calc(90% - 2rpx);
  line-height: 80rpx;
}
.loading .ring {
  position: relative;
  background: #fff;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  border: 10rpx solid #19bee1;
}
.loading .ring:after {
  content: '';
  background: trasparent;
  width: 140%;
  height: 140%;
  position: absolute;
  border-radius: 100%;
  top: -20%;
  left: -20%;
  opacity: 0.7;
  box-shadow: rgba(255, 255, 255, 0.6) -4rpx -5rpx 3rpx -3rpx;
  animation: circle 2s infinite linear;
}
.loading .spinner {
  position: relative;
  width: 70rpx;
  height: 70rpx;
}
.loading .spinner view {
  position: absolute;
  display: inline-block;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  text-align: center;
}
.loading .spinner view:after {
  content: '';
  background: #fff;
  height: 30%;
  display: block;
  width: 4rpx;
  border-radius: 2rpx;
  margin: 0 auto;
}
.loading .spinner view:nth-child(1) {
  transform: rotate(30deg);
  animation: spinner 1.2s linear infinite 0.1s;
  animation-timing-function: steps(12);
}
.loading .spinner view:nth-child(2) {
  transform: rotate(60deg);
  animation: spinner 1.2s linear infinite 0.2s;
  animation-timing-function: steps(12);
}
.loading .spinner view:nth-child(3) {
  transform: rotate(90deg);
  animation: spinner 1.2s linear infinite 0.3s;
  animation-timing-function: steps(12);
}
.loading .spinner view:nth-child(4) {
  transform: rotate(120deg);
  animation: spinner 1.2s linear infinite 0.4s;
  animation-timing-function: steps(12);
}
.loading .spinner view:nth-child(5) {
  transform: rotate(150deg);
  animation: spinner 1.2s linear infinite 0.5s;
  animation-timing-function: steps(12);
}
.loading .spinner view:nth-child(6) {
  transform: rotate(180deg);
  animation: spinner 1.2s linear infinite 0.6s;
  animation-timing-function: steps(12);
}
.loading .spinner view:nth-child(7) {
  transform: rotate(210deg);
  animation: spinner 1.2s linear infinite 0.7s;
  animation-timing-function: steps(12);
}
.loading .spinner view:nth-child(8) {
  transform: rotate(240deg);
  animation: spinner 1.2s linear infinite 0.8s;
  animation-timing-function: steps(12);
}
.loading .spinner view:nth-child(9) {
  transform: rotate(270deg);
  animation: spinner 1.2s linear infinite 0.9s;
  animation-timing-function: steps(12);
}
.loading .spinner view:nth-child(10) {
  transform: rotate(300deg);
  animation: spinner 1.2s linear infinite 1s;
  animation-timing-function: steps(12);
}
.loading .spinner view:nth-child(11) {
  transform: rotate(330deg);
  animation: spinner 1.2s linear infinite 1.1s;
  animation-timing-function: steps(12);
}
.loading .spinner view:nth-child(12) {
  transform: rotate(360deg);
  animation: spinner 1.2s linear infinite 1.2s;
  animation-timing-function: steps(12);
}
@keyframes jump {
  0% {
    transform: rotate(0rpx);
  }
  20% {
    transform: translateY(30%);
  }
  40% {
    transform: translateY(0rpx);
  }
  60% {
    transform: translateY(-30%);
  }
  100% {
    transform: translateY(0rpx);
  }
}
@keyframes scale {
  0% {
    transform: scaleY(0.5);
  }
  50% {
    transform: scaleY(1.2);
  }
  100% {
    transform: scaleY(0.5);
  }
}
@keyframes fadeIn {
  0% {
    opacity: 1;
  }
  25% {
    opacity: 0.5;
  }
  50% {
    opacity: 0;
  }
  75% {
    opacity: 0.5;
  }
  100% {
    opacity: 1;
  }
}
@keyframes circle {
  0% {
    transform: rotateZ(0deg);
  }
  100% {
    transform: rotateZ(360deg);
  }
}
@keyframes spinner {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
